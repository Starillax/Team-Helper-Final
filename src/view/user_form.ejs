<!DOCTYPE html>
<html lang="pt-BR">

<%- include('includes/head_forms') %>

<body>

    <%- include('includes/navbar') %>

    <script>
        function teste(){

            alert("oi");
            let nome = document.getElementById('nome').value;
            let email = document.getElementById('email').value;
            let senha = document.getElementById('senha').value;
            let empresa = document.getElementById('empresa').value;
            let pfp = document.getElementById('pfp').value;

            alert(nome + ' ' + email + ' ' + senha + ' ' + empresa + ' ' + pfp);
        }
    </script>

    <div class="form-style-10">
        <h1>Cadastre-se!</h1>
        <form action="/users/cadastrar" onsubmit="teste()" method="post" enctype="multipart/form-data">
            <div class="section"><span>1</span>Dados para a Conta</div>
            <div class="inner-wrap">
                <label>Nome <input type="text" name="nome" id="nome" required /></label>
                <label>E-mail <input type="email" name="email" id="email" required /></label>
                <label>Senha <input type="password" name="senha" id="senha" required /></label>
                <label for="empresa">Selecione sua empresa:</label>
                <select name="empresa" id="empresa">
                <% empresas.forEach(empresa => { %>
                    <option value="<%= empresa.id %>"><%= empresa.nome %></option>
                <% }) %>
                </select>
            </div>
        
            <div class="section"><span>2</span>Dados Adicionais</div>
            <div class="inner-wrap">
                <label>Foto de Perfil</label>
                <input type="file" accept="image/*" name="pfp" id="pfp" />
            </div>

            <div class="button-section">
                <input type="submit" value="Realizar Cadastro!" />
            </div>
        </form>
    </div>

</body>
</html>